<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hong.postService.repository.memberRepository.MemberMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into users(name, login_id, password)
            values (#{name}, #{loginId}, #{password})
    </insert>

    <select id="findById" resultType="Member">
        select *
        from users
        where id = #{id}
    </select>

    <select id="findByLoginId" resultType="Member">
        select *
        from users
        where login_id = #{loginId}
    </select>

    <select id="findAll" resultType="Member">
        select *
        from users
    </select>

    <update id="update">
        update users
            set name = #{updateParam.name},
                login_id = #{updateParam.loginId},
                password = #{updateParam.password}
            where id  = #{id}
    </update>

    <delete id="delete">
        delete from users
        where id = #{id}
    </delete>
</mapper>